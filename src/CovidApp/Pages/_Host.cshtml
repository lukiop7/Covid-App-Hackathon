@page "/"
@namespace CovidApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CovidApp</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="css/app.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>

    <!-- This is the glue between Blazor and Chart.js -->
    <script src="_content/ChartJs.Blazor.Fork/ChartJsBlazorInterop.js"></script>

    <style>
        .loader
        {
            border: 2vw solid #f3f3f3; /* Light grey */
            border-top: 2vw solid #3498db; /* Blue */
            border-radius: 50%;
            width: 20vw;
            height: 20vw;
            animation: spin 2s linear infinite;
            position: fixed;
            top: 50%;
            left: 50%;
            /* bring your own prefixes */
            display: inline-block;
        }

        @@media(min-aspect-ratio: 1/1)
        {
            .loader
            {
                width: 20vh;
                height: 20vh;
                border: 2vh solid #f3f3f3; /* Light grey */
                border-top: 2vh solid #3498db; /* Blue */
            }
        }

        @@keyframes spin
        {
            0%
            {
                transform: translate(-50%, -50%) rotate(0deg);
            }

            100%
            {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <script src="_framework/blazor.server.js"></script>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <script>
        const themes = [
            {
                className: "bright",
            },
            {
                className: "dark",
            }
        ]

        window.applyTheme = (theme) => {
            var app = document.getElementById("app-root");
            app.className = theme;
        };
    </script>
</body>
</html>
